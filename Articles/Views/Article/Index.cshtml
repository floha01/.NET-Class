@model List<ArticleModel>

<div class = "table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">Content</th>
                <th scope="col">CreatedAt</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entry in Model) 
            {
                <tr>
                    <td>@entry.Id</td>
                    <td>@entry.Title</td>
                    <td>@entry.Content</td>
                    <td>@entry.ReleaseDate</td>
                </tr>
            }
            
    </table>
</div>